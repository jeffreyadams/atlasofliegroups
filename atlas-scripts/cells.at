set special_orbit(SpringerTable st,WCell cell)=ComplexNilpotent:st.springer_inverse(st.ct.special_character(cell))
set special_orbit(SpringerTable st)=(WCell->ComplexNilpotent):(WCell cell):special_orbit(st,cell)

set W_cell(Param p)=WCell:
let (index,cells)=W_cells(p) in
cells[first(for i:#cells do let (param_indices,)=cells[i] in find(param_indices,index)>=0 od)]

{assuming block and cells are already computed:}
set W_cell([Param] block,[WCell] cells,Param p)=WCell:
let index=find(block,p) then
cell_number=first(for (param_numbers,)@i in cells do find(param_numbers,index)>=0 od) in
cells[cell_number]

set special_orbit(SpringerTable st,Param p)=ComplexNilpotent:special_orbit(st,W_cell(p))
set special_orbit(SpringerTable st)=(Param->ComplexNilpotent):(Param p):special_orbit(st,W_cell(p))

set GK_dimension(SpringerTable st,Param p)=int:st.special_orbit(p).dim_nilpotent\2
