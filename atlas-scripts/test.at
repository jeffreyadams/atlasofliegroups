
set test(RootDatum G,(int->int) epsilon)=
let rv=for w in G.W do
 for i:ss_rank(G) do
  let alpha=G.simple_roots[i] in
   if is_simple_root (G,w*alpha) then [(w,i,delta(epsilon,w,i))] else [] fi od.##  od.##
then
signs=for (,,j) in rv do j od then
result=all(for x in signs do x=1 od)
in prints("result: ", result);
(rv,signs,result)

set test(RootDatum G)=test(G,orientation_function(G))

