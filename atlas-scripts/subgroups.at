{
Given a set of weights,
compute root datum of coroots perpendicular to all of them 
}
set centralizer(RootDatum rd,[vec] wts)=
let indices=##
for a@i in poscoroots(rd) do if =a*wts then [i] else [] fi od
in
if #indices=0 then complex_torus(rank(rd)) else
root_datum(simple_system_from_positive(for i in indices do posroots(rd)[i] od,
for i in indices do poscoroots(rd)[i] od)) fi

{
Given a set of coweights,
compute root datum of roots perpendicular to all of them 
}
set centralizer([vec] cwts,RootDatum rd)=
let indices=##
for a@i in posroots(rd) do if =a*cwts then [i] else [] fi od
in
if #indices=0 then complex_torus(rank(rd)) else
root_datum(simple_system_from_positive(for i in indices do posroots(rd)[i] od,
for i in indices do poscoroots(rd)[i] od)) fi

set centralizer(RootDatum rd,ratvec v) = RootDatum:
   let roots = columns_with((vec alpha): is_integer(alpha*v), posroots(rd))
   then coroots = rank(rd) # for alpha in roots do coroot(rd,alpha) od
   in root_datum_from_positive(roots,coroots)

set centralizer(RootDatum rd,[ratvec] vecs) = RootDatum:
   let roots = columns_with((vec alpha): all(for v in vecs do is_integer(alpha*v) od), posroots(rd))
   then coroots = rank(rd) # for alpha in roots do coroot(rd,alpha) od
   
   in root_datum_from_positive(roots,coroots)

{ centralizer of semisimple group element: Cent_G(exp(2\pi iv)^0
see centralizer@(KGBElt,ratvec) in K_highest_weights.at
}

set centralizer(RootDatum rd,ratvec v) = RootDatum:
   let roots = columns_with((vec alpha): is_integer(alpha*v), posroots(rd))
   then coroots = rank(rd) # for alpha in roots do coroot(rd,alpha) od
   in root_datum_from_positive(roots,coroots)




