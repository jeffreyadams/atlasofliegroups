{This function finds the tau invariants for the representation in the cell, and, 
keeps only one set of tau invariants corresponding to the one copy of the complex group}

set taus_of_complex_group_cell(Block B, [int] cell)=[(int,[int])]:
let T=tau_invariants_of_cell(B, cell)
then K=[int_vec_pair]:[]
then G=real_form(B)
then s=rat_as_int(rank(G)/2)
in for t in T do let v=[int]:[] then (r,w)=t in for i:s do let k=find(w,i) in if k!=-1 then v#:=i fi od; K#:=(r,v) od;K

set taus_of_complex_group_cell_raw( Block B, [int] cell)=[[int]]:
let T=taus_of_complex_group_cell(B, cell)
then rv=[[int]]:[]
in for (,t) in T do rv#:=t od; rv


{set taus_from_complex_group(RealForm G)=[[int]]:
let Gd=dual_quasisplit_form(G)
then T=tau_invariants(block(G,Gd))
then B=[[int]]:[]
in 
for t in T do let v=[int]:[] in for i:2 do let k=find(t,i) in if k!=-1 then v#:=i fi od; B#:=v od;B
}

set wrep_complex_group (Block B,[int] cell)=Wrep:
wrep( rat_as_int(rank(real_form(B))/2), taus_of_complex_group_cell_raw(B,cell))

set wreps_complex_group(Block B,[[int]] cells)=[Wrep]:for cell in cells do wrep_complex_group(B,cell) od



