set A_Levi_factor_A(int rank, [int] tau)=[int]:
let tau=sort(tau) in
assert(tau[#tau-1] < rank,"last entry of tau is great than rank-1");
let strings= for a in extract_strings(tau) do a+1 od
in strings##(for i:rank-sum(strings) do 1 od)
{in if tau[#tau-1]= rank-1 then strings##(for i:(rank-sum(strings)-1) do 1 od) else strings##(for i:(rank-sum(strings)+1) do 1 od)fi}

set Levi_signature_A(int rank,[[int]] tau_invariants)=([[int]]):
if #tau_invariants=0 then ([[int]]:[])
elif #tau_invariants[0]=0 then ([[int]]:[[]]) else
let
tau_invariants=max_only(tau_invariants) then
A_Levis=[[int]]:[] then
AC_Levis=[(int,[int])]:[] in
for tau in tau_invariants do
let tau=sort(tau) in
A_Levis#:=A_Levi_factor_A(rank,tau)  od;(A_Levis) fi


set wrep_A(int rank,[[int]] tau_invariants)=Wrep_A:
  let rec_fun f
    (int rank,[[int]] A_Levis, [int] p) =
    ([int]):
if #A_Levis=0 then
assert(sum(p)=rank,"Error: |p| != rank");
(transpose(p))
elif #A_Levis=1 and #A_Levis[0]=0 then ([rank]) else 
let a=max_first_entry(A_Levis)
in if a>0 then p:=p#a fi;
f(rank,keep_by_first_entry_and_truncate(A_Levis,a),p)  fi in
let A_Levis=Levi_signature_A(rank,tau_invariants) in
  f(rank,A_Levis,[])



