set split_lines (string text) = [string]:
( if text~[0]!=new_line then text := (text next text:="") ## new_line fi
; let last=0 in
  for c@i in text
  do if c=new_line then [text[last:i]] next last:=i+1 else [] fi
  od.##
)

set is_substring (string key, string text) = bool:
