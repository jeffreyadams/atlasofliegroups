set none (mat M,(vec->bool) filter) = bool:
  let j=n_columns(M)-1 in while >=j and not filter(M[j]) do j-:=1 od; <j
set first (mat M,(vec->bool) filter) = int:
  let j=0, n=n_columns(M)
