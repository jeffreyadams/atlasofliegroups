  let j=n_columns(M)-1 in while >=j and filter(M[j]) do j-:=1 od; j

set columns_with ((int,vec->bool) p,mat m) = mat:
  let res = [vec]: [] in
  for col@j in m do if p(j,col) then res #:= col fi od; n_rows(m)#res
