{ nicer display of Splits }
set split_format (Split w) = string:
  let (a,b)=%w in
  if =a and !=b
  then if abs(b)>1 then int_format(b) elif b=1 then "" else "-" fi +"s"
  else int_format(a) +
    if abs(b)>1 then if <b then "" else "+" fi +int_format(b)+"s"
    elif =b then "" elif b=1 then "+s" else "-s"
    fi
  fi


