set rows_with ((int,vec->bool) p,mat m) = mat:
  n_columns(m) ^ for row@i in rows(m) do if p(i,row) then [row] else [] fi od.##
set rows_with ((vec->bool) p,mat m) = mat:
  n_columns(m) ^ for row in rows(m) do if p(row) then [row] else [] fi od.##
set rows_with ((int->bool) p,mat m) = mat:
  n_columns(m) ^ for row@i in rows(m) do if p(i) then [row] else [] fi od.##
